{
  "name": "vscode-packer-powertools",
  "displayName": "Packer Powertools",
  "description": "Packer file formatting, inline validation, commands, syntax highlighting, and code folding",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.66.0"
  },
  "license": "SEE LICENSE IN LICENSE file",
  "repository": {
    "type": "git",
    "url": "https://github.com/szTheory/vscode-packer-powertools"
  },
  "homepage": "https://github.com/szTheory/vscode-packer-powertools",
  "icon": "images/icon.png",
  "categories": [
    "Formatters",
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:packer",
    "workspaceContains:**/*.pkr.hcl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "packer.init",
        "title": "Packer: init"
      },
      {
        "command": "packer.build",
        "title": "Packer: build"
      }
    ],
    "languages": [
      {
        "id": "packer",
        "aliases": [
          "Packer",
          "packer"
        ],
        "extensions": [
          ".pkr.hcl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "packer",
        "scopeName": "source.packer",
        "path": "./syntaxes/packer.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.66.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "typescript": "^4.6.4",
    "@vscode/test-electron": "^2.1.3"
  }
}
